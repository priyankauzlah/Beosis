<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailArticleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_arrow_back_detailarticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25dp"
                android:layout_marginTop="@dimen/_25dp"
                android:background="@drawable/background_purple"
                android:contentDescription="@string/image_button"
                android:src="@drawable/arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_country_name_detailarticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_36dp"
                android:layout_marginEnd="@dimen/_24dp"
                android:background="@drawable/background_country"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="@string/malaysia"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title_detailarticle"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_25dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/tv_title_detailarticle"
                android:textColor="@color/black"
                android:textSize="27sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ib_arrow_back_detailarticle" />

            <TextView
                android:id="@+id/tv_content_detailarticle"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/tv_content_detailarticle"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/tv_title_detailarticle"
                app:layout_constraintStart_toStartOf="@+id/tv_title_detailarticle"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_detailarticle" />

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Source :"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/tv_content_detailarticle"
                app:layout_constraintTop_toBottomOf="@+id/tv_content_detailarticle" />

            <TextView
                android:id="@+id/tv_source_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="www.link.com"
                android:layout_marginStart="3dp"
                android:textColor="@color/green"
                app:layout_constraintBottom_toBottomOf="@+id/tv_source"
                app:layout_constraintStart_toEndOf="@+id/tv_source"
                app:layout_constraintTop_toTopOf="@+id/tv_source" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>