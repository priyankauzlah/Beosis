<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/background_item"
    android:elevation="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_image_item_scholar_save"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:contentDescription="@string/image_view"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_title_item_scholar_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_image_item_scholar_save"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_toEndOf="@+id/iv_image_item_scholar_save"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_bold"
            android:maxLines="1"
            android:text="@string/kaist"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_uni_item_scholar_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_item_scholar_save"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_toEndOf="@+id/iv_image_item_scholar_save"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_light"
            android:maxLines="1"
            android:text="@string/korea_advanced_institute"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_country_item_scholar_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_uni_item_scholar_save"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_toEndOf="@+id/iv_image_item_scholar_save"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_light"
            android:maxLines="1"
            android:text="@string/south_korea"
            android:textColor="#858585"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_level_item_scholar_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_country_item_scholar_save"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_toEndOf="@+id/iv_image_item_scholar_save"
            android:background="@drawable/background_item_degree"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/undergraduate"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/rv_deadline_item_scholar_save"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20dp"
            android:layout_below="@+id/tv_level_item_scholar_save"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/iv_image_item_scholar_save"
            android:background="@drawable/background_deadline">

            <TextView
                android:id="@+id/tv_deadline_item_scholar_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="@string/close_registration"
                android:textColor="@color/black"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_date_deadline_detailscholarship_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_deadline_item_scholar_save"
                android:layout_alignParentTop="true"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="@dimen/_5dp"
                android:layout_toEndOf="@+id/tv_deadline_item_scholar_save"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="2023-07-07"
                android:textColor="@color/black"
                android:textSize="9sp" />
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>