<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/background_item"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="40dp">

        <ImageView
            android:id="@+id/iv_image_item_scholar"
            android:layout_width="140dp"
            android:layout_height="154dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:contentDescription="@string/image_view"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/asean_undergraduate" />

        <TextView
            android:id="@+id/tv_title_item_scholar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_image_item_scholar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_toEndOf="@+id/iv_image_item_scholar"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_bold"
            android:maxLines="1"
            android:text="@string/kaist"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_uni_item_scholar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_item_scholar"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_toEndOf="@+id/iv_image_item_scholar"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_light"
            android:maxLines="1"
            android:text="@string/korea_advanced_institute"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_country_item_scholar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_uni_item_scholar"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_toEndOf="@+id/iv_image_item_scholar"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_light"
            android:maxLines="1"
            android:text="@string/south_korea"
            android:textColor="#858585"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_level_item_scholar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_country_item_scholar"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_toEndOf="@+id/iv_image_item_scholar"
            android:background="@drawable/background_item_degree"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/undergraduate"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/rv_deadline_item_scholar"
            android:layout_width="167dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tv_level_item_scholar"
            android:layout_alignEnd="@+id/tv_level_item_scholar"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-45dp"
            android:layout_toEndOf="@+id/iv_image_item_scholar"
            android:background="@drawable/background_deadline"
            app:backgroundTint="@null">

            <TextView
                android:id="@+id/tv_deadline_item_scholar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="@string/close_registration"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_date_deadline_detailscholarship"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/tv_deadline_item_scholar"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-3dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/tv_deadline_item_scholar"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:maxLines="1"
                android:text="2023-07-07"
                android:textColor="@color/black"
                android:textSize="11sp" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>